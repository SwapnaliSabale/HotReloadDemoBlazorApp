@page "/counter"

<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

<p role="status">Current count: @currentCount</p>

<button class="btn btn-primary" @onclick="IncrementCount">Addition</button>

<button class="btn btn-primary" @onclick="MultiplyCount">Multiplication</button>


@code {
    private int currentCount = 1;

    private void IncrementCount()
    {
        currentCount++;
    }

     private void MultiplyCount()
    {
       currentCount =  currentCount * currentCount;
    }
}
